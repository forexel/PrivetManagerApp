# Backend environment template. Copy to `server/.env` and adjust.

DATABASE_URL=postgresql+psycopg://privet:privet@localhost:5432/privetdb

# JWT secrets
JWT_SECRET=change_me_backend_secret
MANAGER_JWT_SECRET=change_me_manager_secret

# Token lifetimes
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30
MANAGER_ACCESS_TOKEN_EXPIRE_MINUTES=120

# Object storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=privet-bucket

# Contract signature (PEP)
CONTRACT_SIGNATURE_SECRET=change_me_signature

# Optional mail settings
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
SMTP_SSL=false
SMTP_FROM=
SMTP_FROM_NAME=PrivetManager

# Optional metadata
APP_BASE_URL=http://localhost:5174
APP_VERSION=dev
APP_CHANNEL=web
